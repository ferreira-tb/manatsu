{
  "name": "@manatsu/monorepo",
  "version": "0.4.29",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,?(s)css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "mana-dev build",
    "clippy": "pnpm run \"/^clippy:.*/\"",
    "clippy:manatsu": "cargo clippy -p manatsu -- -D warnings",
    "clippy:manatsu-dev": "cargo clippy -p manatsu-dev -- -D warnings",
    "clippy:playground": "cargo clippy --manifest-path=packages/playground/src-tauri/Cargo.toml -- -D warnings",
    "clippy:plugin-manatsu": "cargo clippy -p tauri-plugin-manatsu -- -D warnings",
    "dev": "cargo tauri dev",
    "docs": "cargo doc --open -p manatsu",
    "format": "prettier . --write && cargo fmt --all",
    "format-check": "prettier . --check",
    "install-dev": "cargo install --path crates/manatsu-dev --force",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:es": "eslint . --config eslint.config.js --cache",
    "lint:style": "stylelint **/*.{scss,vue} --cache",
    "pedantic": "cargo clippy -- -W clippy::pedantic",
    "prepare": "husky",
    "release": "pnpm run \"/^(test|clippy)$/\" && pnpm run build && mana-dev release",
    "release:crate": "pnpm run \"/^(test:crate|clippy)$/\" && pnpm run build && mana-dev release --only-crate",
    "release:package": "pnpm run test:package && pnpm run build && mana-dev release --only-package",
    "test": "pnpm run \"/^test:.*/\"",
    "test:crate": "cargo test -p manatsu && cargo test -p manatsu-dev",
    "test:package": "vitest --run",
    "type-check": "pnpm run -r --parallel --aggregate-output type-check",
    "ui": "vitest --ui --watch"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@tb-dev/eslint-config": "^3.0.1",
    "@tb-dev/stylelint-config": "^1.1.11",
    "@tb-dev/utility-types": "^1.2.0",
    "@tb-dev/utils": "^1.3.1",
    "@types/node": "^20.11.25",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/browser": "^1.3.1",
    "@vitest/coverage-istanbul": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/test-utils": "^2.4.4",
    "@vueuse/core": "^10.9.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "sass": "^1.71.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-vue-devtools": "^7.0.16",
    "vitest": "^1.3.1",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "vue-tsc": "^2.0.6",
    "webdriverio": "^8.33.0"
  }
}

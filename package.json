{
  "name": "@manatsu/monorepo",
  "version": "0.4.1",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,?(s)css,vue,md,json,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "cargo run -p manatsu-dev -- build",
    "build:shared": "pnpm run -F @manatsu/shared build",
    "cli": "cargo run -p manatsu-dev --",
    "clippy": "run-s clippy:*",
    "clippy:manatsu": "cargo clippy -p manatsu -- -D warnings",
    "clippy:manatsu-dev": "cargo clippy -p manatsu-dev -- -D warnings",
    "clippy:playground": "cargo clippy --manifest-path=packages/playground/src-tauri/Cargo.toml -- -D warnings",
    "clippy:plugin-manatsu": "cargo clippy -p tauri-plugin-manatsu -- -D warnings",
    "component": "cargo run -p manatsu-dev -- component",
    "composable": "cargo run -p manatsu-dev -- composable",
    "dev": "cargo tauri dev",
    "docs:cli": "cargo doc --open -p manatsu",
    "format": "prettier . --write && cargo fmt --all",
    "format-check": "prettier . --check",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --config eslint.config.js --cache",
    "lint:style": "stylelint **/*.{scss,vue} --cache",
    "prepare": "husky",
    "release": "run-p test clippy && pnpm run build && cargo run -p manatsu-dev -- release",
    "test": "run-p test:crates test:packages",
    "test-ci": "run-p test:crates test:packages-ci",
    "test:crates": "cargo test -p manatsu",
    "test:packages": "vitest --run",
    "test:packages-ci": "vitest --run --bail 1",
    "type-check": "vue-tsc --noEmit",
    "ui": "vitest --ui --watch"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@tb-dev/eslint-config": "^2.1.2",
    "@tb-dev/stylelint-config": "^1.1.10",
    "@tb-dev/utility-types": "^1.1.6",
    "@tb-dev/utils": "^1.2.8",
    "@types/node": "^20.11.20",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/browser": "^1.3.1",
    "@vitest/coverage-istanbul": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/test-utils": "^2.4.4",
    "@vueuse/core": "^10.9.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sass": "^1.71.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-vue-devtools": "^7.0.15",
    "vitest": "^1.3.1",
    "vue": "^3.4.20",
    "vue-router": "^4.3.0",
    "vue-tsc": "^1.8.27",
    "webdriverio": "^8.32.3"
  }
}

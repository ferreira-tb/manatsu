{
    "name": "manatsu",
    "version": "0.1.0",
    "description": "Vue 3 component library",
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/ferreira-tb/manatsu",
    "repository": {
        "type": "git",
        "url": "https://github.com/ferreira-tb/manatsu.git"
    },
    "keywords": [
        "manatsu",
        "vue",
        "component library"
    ],
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/manatsu.umd.cjs",
    "module": "./dist/manatsu.js",
    "exports": {
        ".": {
            "import": "./dist/manatsu.js",
            "require": "./dist/manatsu.umd.cjs"
        },
        "./themes/*": "./dist/themes/*"
    },
    "types": "dist/index.d.ts",
    "lint-staged": {
        "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write"
    },
    "scripts": {
        "dev": "vite",
        "build": "run-s type-check build-only",
        "build-only": "vite build",
        "prepare": "husky install",
        "prettier": "npx prettier . --write",
        "taze": "npx taze -w -f",
        "test": "vitest --run",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui --watch --coverage.enabled=true",
        "test:watch": "vitest --watch",
        "type-check": "vue-tsc --noEmit"
    },
    "dependencies": {
        "unocss": "^0.57.6"
    },
    "devDependencies": {
        "@octokit/core": "^5.0.1",
        "@types/node": "^20.9.2",
        "@vitejs/plugin-vue": "^4.5.0",
        "@vitest/browser": "1.0.0-beta.5",
        "@vitest/coverage-istanbul": "1.0.0-beta.5",
        "@vitest/ui": "1.0.0-beta.5",
        "@vue/test-utils": "^2.4.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0",
        "npm-run-all2": "^6.1.1",
        "prettier": "^3.1.0",
        "taze": "^0.12.0",
        "terser": "^5.24.0",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2",
        "vite": "^5.0.0",
        "vitest": "1.0.0-beta.5",
        "vue": "^3.3.8",
        "vue-tsc": "^1.8.22",
        "webdriverio": "^8.23.1"
    }
}

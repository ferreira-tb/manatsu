{
  "name": "@manatsu/monorepo",
  "version": "0.1.58",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.13.1",
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,scss,vue,md,json}": "prettier --write",
    "*.{?(c|m)@(j|t)s,scss,vue}": "pnpm lint:ts"
  },
  "scripts": {
    "build": "nr cli dev build",
    "bump": "miho bump --no-ask --add .",
    "cli": "cargo run --manifest-path=cli/Cargo.toml --",
    "clippy": "run-s clippy:*",
    "clippy:cli": "cargo clippy --manifest-path=cli/Cargo.toml -- -D warnings",
    "clippy:playground": "cargo clippy --manifest-path=packages/playground/src-tauri/Cargo.toml -- -D warnings",
    "clippy:plugin": "cargo clippy --manifest-path=plugin/Cargo.toml -- -D warnings",
    "deps": "taze -f -r -w -l",
    "dev": "cargo tauri dev",
    "docs:cli": "cargo doc --open --manifest-path=cli/Cargo.toml",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "run-p lint:*",
    "lint:ts": "eslint . --config eslint.config.js --cache",
    "lint:style": "stylelint **/*.{scss,vue} --cache",
    "prepare": "husky install",
    "release": "nr build && nr cli dev release",
    "test": "run-p test:*",
    "test:cli": "cargo test --manifest-path=cli/Cargo.toml",
    "test:vue": "vitest --run",
    "type-check": "vue-tsc --noEmit",
    "ui": "vitest --ui --watch"
  },
  "pnpm": {
    "requiredScripts": [
      "build",
      "type-check"
    ]
  },
  "devDependencies": {
    "@manatsu/theme-builder": "^0.2.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@tauri-apps/api": "^1.5.3",
    "@tb-dev/eslint-config": "^1.5.8",
    "@tb-dev/stylelint-config": "^1.0.2",
    "@tb-dev/utility-types": "^1.0.2",
    "@types/node": "^20.10.6",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vitest/browser": "1.1.1",
    "@vitest/coverage-istanbul": "1.1.1",
    "@vitest/ui": "1.1.1",
    "@vue/test-utils": "^2.4.3",
    "@vueuse/core": "^10.7.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.1",
    "prettier-plugin-css-order": "^2.0.1",
    "rollup": "^4.9.2",
    "sass": "^1.69.6",
    "stylelint": "^16.1.0",
    "stylelint-config-standard-scss": "^12.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "taze": "^0.13.1",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "1.1.1",
    "vue": "^3.4.3",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27",
    "webdriverio": "^8.27.0"
  }
}

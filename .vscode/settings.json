{
  "vsicons.associations.folders": [
    {
      "icon": "theme",
      "extensions": ["composables"],
      "format": "svg"
    },
    {
      "icon": "aurelia",
      "extensions": ["manatsu"],
      "format": "svg"
    },
    {
      "icon": "plugin",
      "extensions": ["tauri-plugin", "tauri-plugin-manatsu", "vue-plugin"],
      "format": "svg"
    },
    {
      "icon": "component",
      "extensions": ["components"],
      "format": "svg",
      "overrides": "component"
    }
  ],
  "files.exclude": {
    ".eslintcache": true,
    ".stylelintcache": true
  },
  "prettier.requireConfig": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "rust-analyzer.showUnlinkedFileNotification": false,
  "rust-analyzer.linkedProjects": ["Cargo.toml", "packages/playground/src-tauri/Cargo.toml"],
  "stylelint.snippet": ["css", "postcss", "scss", "vue"],
  "stylelint.validate": ["css", "postcss", "scss", "vue"],
  "stylelint.packageManager": "pnpm",
  "conventionalCommits.promptScopes": true,
  "conventionalCommits.scopes": [
    "css",
    "components",
    "composables",
    "core",
    "playground",
    "cli",
    "cli-dev",
    "tauri-plugin",
    "vue-plugin"
  ],
  "tailwindCSS.experimental.configFile": "./packages/playground/tailwind.config.js",
  "tailwindCSS.classAttributes": [
    "bottom-class",
    "center-class",
    "container-class",
    "content-class",
    "dialog-class",
    "end-class",
    "footer-class",
    "header-class",
    "header-end-class",
    "header-start-class",
    "input-class",
    "logo-class",
    "media-class",
    "menu-class",
    "menu-item-class",
    "sidebar-class",
    "sidebar-item-class",
    "start-class",
    "subtitle-class",
    "table-class",
    "tbody-class",
    "tbody-row-class",
    "thead-class",
    "thead-row-class",
    "title-class",
    "title-link-class",
    "top-class"
  ],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/target/**",
    "**/packages/components/**",
    "**/packages/sass/**"
  ]
}

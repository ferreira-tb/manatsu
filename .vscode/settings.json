{
  "vsicons.associations.folders": [
    { "icon": "theme", "extensions": ["composables"], "format": "svg" },
    { "icon": "aurelia", "extensions": ["manatsu"], "format": "svg" },
    {
      "icon": "plugin",
      "extensions": ["tauri-plugin-manatsu"],
      "format": "svg"
    },
    {
      "icon": "component",
      "extensions": ["components"],
      "format": "svg",
      "overrides": "component"
    }
  ],
  "files.exclude": {
    ".eslintcache": true,
    ".stylelintcache": true
  },
  "prettier.requireConfig": true,
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "rust-analyzer.showUnlinkedFileNotification": false,
  "rust-analyzer.linkedProjects": ["Cargo.toml", "packages/playground/src-tauri/Cargo.toml"],
  "stylelint.snippet": ["css", "postcss", "scss", "vue"],
  "stylelint.validate": ["css", "postcss", "scss", "vue"],
  "stylelint.packageManager": "pnpm",
  "conventionalCommits.promptScopes": true,
  "conventionalCommits.scopes": [
    "css",
    "components",
    "composables",
    "core",
    "playground",
    "cli",
    "plugin"
  ],
  "tailwindCSS.classAttributes": ["class", "content-class", "header-class", "sidebar-item-class"],
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/target/**",
    "**/packages/components/**",
    "**/packages/sass/**"
  ],
  "tailwindCSS.experimental.configFile": "./packages/playground/tailwind.config.js"
}
